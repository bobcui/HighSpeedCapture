modules = ["swift"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "CLI Simulator"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Swift Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "iOS App Build"

[[workflows.workflow]]
name = "CLI Simulator"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "swift SlowMotionSimulator/main.swift"

[[workflows.workflow]]
name = "Swift Build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "swift build"

[[workflows.workflow]]
name = "iOS App Build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "swift build -c release"

[deployment]
run = ["sh", "-c", "swift build -c release"]
