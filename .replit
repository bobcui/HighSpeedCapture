modules = ["swift"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "iOS App Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ios_simulator"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Simulator"

[[workflows.workflow]]
name = "iOS App Build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "swift run -c release"
waitForPort = 5000

[[workflows.workflow]]
name = "ios_simulator"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "open -a Simulator.app && xcrun simctl boot \"iPhone 13\" && xcrun simctl install booted SlowMotionVideoApp/ && xcrun simctl launch booted com.example.SlowMotionVideoApp"

[[workflows.workflow]]
name = "Simulator"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "swift simulator.swift"

[deployment]
run = ["sh", "-c", "swift run -c release"]
